	<script>
		var rotation = function (ele){
		   $(ele).rotate({
		      angle:0, 
		      animateTo:360, 
		      callback: rotation,
		      easing: function (x,t,b,c,d){        // t: current time, b: begInnIng value, c: change In value, d: duration
		          return c*(t/d)+b;
		      }
		   });
		}
		$(function(){
			if( '<%= title2%>' != "" ){
				$('#ud').addClass('has-error');
				$('#pd').addClass('has-error');

				$('#uid').tooltip({
					title:"<%= title2%>",
					container:'body',
					placement:'auto left'
				});
				$('#uid').tooltip('show');
			}

			    $('#uid').click(function (){
			    	$('#ud').removeClass('has-error');
			    	$('#uid').tooltip('hide');
			    });
				$('#eid').click(function(){
			    	$('#pd').removeClass('has-error ');
			    	$('#uid').tooltip('hide');
			    });
		});
	</script>
