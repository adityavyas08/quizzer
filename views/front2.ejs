	<script>
			
			parallax.background = $("body");
			parallax.scaling = 0.4; //background moves 40% with the pages
			
			var rotation = function (ele){
			   $(ele).rotate({
			      angle:0, 
			      animateTo:360, 
			      callback: rotation,
			      easing: function (x,t,b,c,d){        // t: current time, b: begInnIng value, c: change In value, d: duration
			          return c*(t/d)+b;
			      }
			   });
			}

			function validateEmail(email) { 
			    var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
			    return re.test(email);
			}	
			var socket = io.connect();
	        $(function(){

	        	$(document).bind("contextmenu",function(e){
	        	        e.preventDefault();
	        	});
	        	$('#siu').click(function(){
	        		var fname = $('#fname').val();
	                var user = $('#uid').val();
	                var email = $('#eid').val();
	                var passwd = $('#passwd').val();
	                var passwrd = $('#xpasswd').val();
	                var role;	                 
	                if( $('#role_creator').is(":checked") ){ // check if the radio is checked
            			role = "creator"; // retrieve the value
        			}else role = "participant"; // retrieve the value
	                if( passwd === passwrd){
	                	if(user.indexOf(' ')>=0){
	                		alert("Username Can't Contain Spaces!")
	                	}else if(passwd.length< 6){
	                		alert("Password Can't Be Less Than 6 Characters!");
	                	}else if(!validateEmail(email)){
	                		alert("Email You Entered Is Invalid!");
	                	}else{
	                		alert("An Email With Activation Code Sent To: " + email);
	                		socket.emit('new_user',fname,user,passwd,email, role);
	                		$('#signup').submit();
	                	}
	                }else{
	                	alert("Passwords Didn't Match!");
	                	$('#passwd').val('');
	                    $('#xpasswd').val('');
	                }
	            });
	            $('#uid').blur(function(){
	                    var name = $('#uid').val();
	                    socket.emit('check',name);        
	            });
	            $('#eid').blur(function(){
	                    var email = $('#eid').val();
	                    socket.emit('check_email',email);        
	            });
	            $('#uid').click(function (){
	            	$('#ud').removeClass('has-error');
	            	$('#uid').tooltip('hide');
	            });
	        	$('#eid').click(function(){
	            	$('#ed').removeClass('has-error ');
	            	$('#eid').tooltip('hide');
	            });

	        });

	        socket.on('tell',function(val){
	            $('#ud').addClass('has-error');
	            $('#uid').val('');
	            $('#uid').tooltip({
	            	title:"User ID Already Taken",
	            	container:'body',
	            	placement:'auto left'	
	            });
	            $('#uid').tooltip('show');
	        });
	        socket.on('tell_email',function(val){
	            $('#ed').addClass('has-error');
	            $('#eid').val('');
	        	$('#eid').tooltip({
	        		title:"Email Address Already Registered",
	        		container:'body',
	        		placement:'auto left'	
	        	});
	        	$('#eid').tooltip('show');
	        });
		    socket.on('forward',function(){
	            $('#signup').submit();
	        });
		</script>
