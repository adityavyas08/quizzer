<html>
    <head>
        <meta charset="utf-8"> 
                <title>Home</title>
                <meta name="viewport" content="width=device-width, initial-scale=1">
                <link href="stylesheet/button.css" rel="stylesheet">
                <!-- <link href="css/test.css" rel="stylesheet"> -->
                <link href="stylesheet/signin.css" rel="stylesheet">
                <link href="stylesheet/ionicons.min.css" rel="stylesheet">
                <link rel= 'stylesheet' href='bootstrap/css/bootstrap.min.css'  type='text/css'/>
                <link href="css/flat-ui.css" rel="stylesheet">
                <script src="all.js"></script>
                <script src="js/flatui-radio.js"></script>
                <script src="/socket.io/socket.io.v0.9.16.js"></script>
        <script>
          function preventBack(){window.history.forward();}
          setTimeout("preventBack()", 0);
          window.onunload=function(){null};
        </script>
    </head>
    <body background="img/p2.png">
        <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                    <div class="navbar-header">
                        <h5 style="color:white" >TestWiz
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="glyphicon glyphicon-pencil"></span>
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </h5>
                    </div>
                   <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <form class="navbar-form navbar-right" action='/logout'>
                            <div class="btn-group">
                              <button type="button" class="btn btn-inverse dropdown-toggle" data-toggle="dropdown" style="background: rgba(54, 25, 25, 0);color:#fff">
                                <span class="glyphicon glyphicon-user"></span>
                                 <%= title %>  
                                <span class="caret"></span>
                              </button>
                              <ul class="dropdown-menu">
                                <li ><a href="/home" ><span class="glyphicon glyphicon-home"></span> Home</a></li>
                                <li><a href="/cpasswd?user=<%= title %>" ><span class="glyphicon glyphicon-edit"></span> Change Password</a></li>
                              </ul>
                            </div>
                            <button type="submit" class="btn navbar-btn btn-inverse" style="background: rgba(54, 25, 25, 0);color:#fff">
                                <span class="glyphicon glyphicon-log-out" ></span> logout
                            </button>
                        </form>
                   </div>
                    
                </nav>
            </div>
        </div>
        </br>
        </br>

        <form  action="/show_quiz"; role="form" method="post">
            <div class="row col-lg-12" style="margin-bottom:20px"> 
                <div class="col-lg-4">
                    <h3 >
                        Welcome <%= title%>
                    </h3>
                </div>
                <div class="col-lg-4">
                </div>
                <div class="col-lg-4">
                </div>
            </div>
            <div class="row col-lg-12" style="margin-bottom:10px"> 
                <div class="col-lg-2">
                </div>
                <div class="col-lg-10" style="font-size:22px">
                        Section Name : <span class="badge" style="font-size:22px;color:#2c3e50"> <%= name %> </span>
                </div>
            </div>
            <div class="row col-lg-12" style="margin-bottom:10px"> 
                <div class="col-lg-2">
                </div>
                <div class="col-lg-10" style="font-size:22px">
                        Section Information : <span class="badge" style="font-size:22px;color:#2c3e50"> <%= rule %> </span>
                </div>
            </div>
            <div class="row col-lg-12" style="margin-bottom:10px"> 
                <div class="col-lg-2">
                </div>
                <div class="col-lg-10" style="font-size:22px">
                        Number Of Questions : <span class="badge" style="font-size:22px;color:#2c3e50"> <%= qc %> </span>
                </div>
            </div>
            <div class="row col-lg-12" style="margin-top:20px">
                <div class="col-lg-4"></div>
                <div class="col-lg-4">
                    <button type="submit" class="btn btn-inverse" style="width:100%;height:42px;">
                        <span class="glyphicon glyphicon-thumbs-up"></span>
                         Best luck
                    </button>
                </div>
                <div class="col-lg-4"></div>
            </div>
        </form>
        </div>
        <script type="text/javascript">
        $(function() {
           $(document).bind("contextmenu",function(e){
                   e.preventDefault();
           });
        });
        </script>
    </body>
</html>