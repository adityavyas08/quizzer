    <script>
        var $j = jQuery.noConflict();
        var count = 2;
        var limit = 4;
        function IsNumeric(input){
            return (input - 0) == input && (''+input).replace(/^\s+|\s+$/g, "").length > 0;
        }
        var rotation = function (ele){
           $j(ele).rotate({
              angle:0, 
              animateTo:360, /*
                bhad me jao
                courtsey : loki, the god of destruction, brother of thor, king of asgard( that's what i want to become no i am)
                i am also the villian ( not player og chelsea ) of thor 1 thor 2 and avengers and may be avengers 2;
                babby doll me sone di, god mai destruction ka.............
              */
              callback: rotation,
              easing: function (x,t,b,c,d){        // t: current time, b: begInnIng value, c: change In value, d: duration
                  return c*(t/d)+b;
              }
           });
        }
        $j(function(){
            var latexMath = $j('#eqscx'), latexSource = $j('#latex-source');
              latexMath.bind('keydown keypress', function() {
                setTimeout(function() {
                  var latex = latexMath.mathquill('latex');
                  latexSource.val(latex);
              });
              }).keydown().focus();

              latexSource.bind('keydown keypress', function() {
                var oldtext = latexSource.val();
                setTimeout(function() {
                  var newtext = latexSource.val();
                  if(newtext !== oldtext) {
                    latexMath.mathquill('latex', newtext);
                    //htmlSource.text(printTree(latexMath.mathquill('html')));
                  }
                });
              });

              //if(location.hash && location.hash.length > 1)
                //latexMath.mathquill('latex', decodeURIComponent(location.hash.slice(1))).focus();
            $j('#submit').click(function(){
                $j.cookie('a','a');
            });

            $j('#opt0').blur(function(){
                var temp = $j('#opt0').val();
                if( IsNumeric( temp )){
                    var num = parseInt(temp);
                    if( num < 0 || num >= count){
                        $j('#opt0').val('');    
                    }
                }else{
                    $j('#opt0').val('');
                }
            });

            $j('#mcqsc').click(function(e){
                limit = 4;
                $j('#type').val('mcqsc');
                $j('#bgrp').attr('style', 'visibility:hidden');
            });
            $j('#eqsc').click(function(e){
                limit = 4;
                $j('#type').val('eqsc');
                $j('#eqscx').attr('style', 'visibility:visible;height:30px;width:100%;');
                $j('#paths').val('1');
                $j('#bgrp').attr('style', 'visibility:hidden');
            });
            $j('#mcqimgsc').click(function(e){
                limit = 4;
                $j('#type').val('mcqimgsc');
                var data = $j('<input  class="form-control" style="height:42px;width:100%;margin-top:10px;margin-bottom:10px;background: rgba(540, 250, 250, 0.1);" type="file" name="questiontt2" >');
                $j('#paths').val('1');
                $j('#bgrp').attr('style', 'visibility:hidden');
                $j('#datadynamic').attr('style','background:rgba(540, 250, 250, 0.0)' );
                $j('#datadynamic').append(data);
                
            });
            
            $j('#essay').click(function(e){
                limit = 1;
                $j('#type').val('essay');
                $j('#opt0').val('0');
                $j('#opt0').attr('readOnly','true');
                $j('#bgrp').attr('style', 'visibility:hidden');
                $j('#opt1').attr('placeholder','essay word count');
            });

            $j('#fts').click(function(e){
                limit = 1;
                $j('#type').val('fts');
                $j('#opt0').val('0');
                $j('#opt0').attr('readOnly','true');
                $j('#bgrp').attr('style', 'visibility:hidden');
                $j('#opt1').attr('placeholder','Solution');
            });

            $j('#ftsimg').click(function(e){
               limit = 1;
               $j('#type').val('ftsimg');
               $j('#opt0').val('0');
               $j('#opt0').attr('readOnly','true');
               $j('#opt1').attr('placeholder','Solution');
               $j('#bgrp').attr('style', 'visibility:hidden');
               var data = $j('<input  class="form-control" style="height:42px;width:100%;margin-top:10px;margin-bottom:10px;background: rgba(540, 250, 250, 0.1);color:#fff" type="file" name="questiontt2" >');
               $j('#paths').val('1');
               $j('#datadynamic').append(data);
               e.preventDefault();
            });

            $j('#ftseq').click(function(e){
                limit = 1;
                $j('#type').val('ftseq');
                $j('#eqscx').attr('style', "visibility:visible;height:30px;width:100%;");
                $j('#opt0').val('0');
                $j('#bgrp').attr('style', 'visibility:hidden');
                $j('#opt0').attr('readOnly','true');
                $j('#opt1').attr('placeholder','Solution');
                $j('#paths').val('1');
            });



        	$j('#addi').click(function(){
        		if( count < limit ){
                    var data = $j('<input type="text" class="form-control "  placeholder="option : ' + count + '" style="height:42px;width:100%;margin-bottom:10px;background: rgba(540, 250, 250, 0.1);color:#fff" >').attr('name',"opt[]",'id',"opt");
                    count++;
                    $j('#dynamic').append(data);    
                }else{
                    alert('you have crossed the limit options');
                }
        	});

            $j('#submit').click( function(){
                var type = $j('#type').val();
                if( type == 'eqsc' || type == 'ftseq'){
                    var data = $j('#latex-source').val();
                    //var data = $j('#eqscx').text();
                    $j('#equation').val( data );
                }
                $j('#frm').submit();
            });
        });

    </script>
